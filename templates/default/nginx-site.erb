upstream rhodecode {
  least_conn;
  server 127.0.0.1:5000;
  server 127.0.0.1:5001;
  server 127.0.0.1:5002;
  server 127.0.0.1:5003;
  server 127.0.0.1:5004;
}

server {
  listen       80;

  # Send all 80 requests to 443
  if ($scheme = http) {
    return 301 https://src.bos.rapid7.com$request_uri;
  }
}

server {
  listen       443;

  ssl                  on;
  ssl_certificate      /etc/nginx/certs/src.bos.rapid7.com.crt;
  ssl_certificate_key  /etc/nginx/certs/src.bos.rapid7.com.key;
  ssl_protocols        SSLv3 TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers          HIGH:!aNULL:!MD5;
  client_max_body_size 100M;
  client_body_timeout 600;

  location / {
    proxy_pass http://rhodecode;
  }

}
